# =============================================
# Environment Variables Example
# =============================================
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=8080
APP_PORT=8080

# =============================================
# MySQL Configuration
# =============================================
# For Docker Compose (local development)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=edu_rpa
MYSQL_REPORT_DATABASE=edu_rpa_report
MYSQL_USERNAME=rpa_user
MYSQL_PASSWORD=rpa_password
MYSQL_ROOT_PASSWORD=rootpassword

# For AWS RDS (production/staging)
# MYSQL_HOST=your-rds-endpoint.ap-southeast-1.rds.amazonaws.com
# MYSQL_PORT=3306
# MYSQL_DATABASE=edu_rpa
# MYSQL_USERNAME=admin
# MYSQL_PASSWORD=your-rds-password

# =============================================
# MongoDB Configuration
# =============================================
# For Docker Compose (local development)
MONGO_URI=mongodb://mongo_user:mongo_password@localhost:27017/edu_rpa?authSource=admin
MONGO_USERNAME=mongo_user
MONGO_PASSWORD=mongo_password
MONGO_DATABASE=edu_rpa
MONGO_PORT=27017

# For MongoDB Atlas (production/staging)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/edu_rpa

# =============================================
# GitHub Container Registry (for deployment)
# =============================================
GHCR_USERNAME=your-github-username
GHCR_TOKEN=ghp_your_github_token

# =============================================
# Optional: Adminer Port (Database UI)
# =============================================
ADMINER_PORT=8081
